<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicTacToe.Pages.Register.RegisterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="1">
            <Label Text="Email" />
            <Entry Text="{Binding User.Email}" />
            <Label Text="Name" />
            <Entry Text="{Binding User.Name}" />
            <Label Text="Password" />
            <Entry Text="{Binding User.Password}" />
            <Label Text="Repeat Password" />
            <Entry Text="{Binding User.Password2}" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="3">
            <Button Clicked="RegisterClicked" Text="Register" />
            <Button Clicked="BackClicked" Text="Back" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>