<ContentView
    x:Class="TicTacToe.ContentViews.MenuContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid
        Padding="10"
        ColumnDefinitions="*, *, *, Auto"
        RowDefinitions="Auto">


        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            BackgroundColor="#4CAF50"
            Clicked="MainMenuClicked"
            CornerRadius="10"
            LineBreakMode="WordWrap"
            Text="Main Menu"
            TextColor="White" />


        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            BackgroundColor="#2196F3"
            Clicked="LeaderBoardClicked"
            CornerRadius="10"
            LineBreakMode="WordWrap"
            Text="Leader Board"
            TextColor="White" />


        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            BackgroundColor="#FFC107"
            Clicked="AccountClicked"
            CornerRadius="10"
            Text="Account"
            TextColor="White" />


        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="5"
            BackgroundColor="#F44336"
            Clicked="LogoutClicked"
            CornerRadius="10"
            Text="Logout"
            TextColor="White" />
    </Grid>
</ContentView>